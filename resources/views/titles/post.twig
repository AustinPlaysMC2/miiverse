{% set firstPost,firstFavorite,class = 1,1,'add-post-page' %}
{% extends '_master.twig' %}

{% block content %}
{% set id,title_id = hashid(meta.id), hashid(meta.title_id) %}
			<div class="title-header with-header-banner">
				<div class="header-banner-container post-subtype-default-container">
					<div class="post-form-header">
						<span class="post-subtype-default">Post</span>
					</div>
				</div>
				<h1 class="info-content">
					<span class="icon-container">
						<img src="/img/icons/{{ meta.icon }}" class="icon" width="48" height="48">
					</span>
					<span class="title-container">
						<span class="news-community-badge">Main Community</span>
						<span class="title">{{ meta.name }}</span>
					</span>
				</h1>
				{% if meta.platform == 1 %}
					<span class="platform-tag platform-tag-3ds"></span>
				{% elseif meta.platform == 2 %}
					<span class="platform-tag platform-tag-wiiu"></span>
				{% elseif meta.platform == 3 %}
					<span class="platform-tag platform-tag-wiiu-3ds"></span>
				{% endif %}
			</div>
			<div class="body-content">
				<div id="form-content">
				</div>
			</div>
			<form method="post" action="{{ route('post.submit') }}" data-redirect-to="{{ route('title.community', [ title_id, id ]) }}" data-is-own-title="0" enctype="multipart/form-data">
				<input type="hidden" name="olive_title_id" value="{{ meta.title_id }}">
				<input type="hidden" name="olive_community_id" value="{{ meta.id }}">
				<input type="hidden" name="view_id" value="">
				<input type="hidden" name="page_param" value="">
				<input type="hidden" name="back_to_community" value="">
				<div class="add-post-page-content">
					<div class="feeling-selector expression">
						<ul class="buttons">
							<li class="checked">
								<input type="radio" name="feeling_id" value="0" class="feeling-button-normal" checked data-sound="SE_OLV_OK_SUB">
							</li>
							<li class="">
								<input type="radio" name="feeling_id" value="1" class="feeling-button-happy" data-sound="SE_OLV_OK_SUB">
							</li>
							<li class="">
								<input type="radio" name="feeling_id" value="2" class="feeling-button-like" data-sound="SE_OLV_OK_SUB">
							</li>
							<li class="">
								<input type="radio" name="feeling_id" value="3" class="feeling-button-surprised" data-sound="SE_OLV_OK_SUB">
							</li>
							<li class="">
								<input type="radio" name="feeling_id" value="4" class="feeling-button-frustrated" data-sound="SE_OLV_OK_SUB">
							</li>
							<li class="">
								<input type="radio" name="feeling_id" value="5" class="feeling-button-puzzled" data-sound="SE_OLV_OK_SUB">
							</li>
						</ul>
					</div>
					<input type="hidden" name="album_image_id" value="">
					<div class="image-selector dropdown">
						<a class="dropdown-toggle">
							<img class="preview-image" src="/img/add-post-no-image.png" data-forbidden-src="/img/add-post-image-forbidden.png" data-default-src="/img/add-post-no-image.png">
						</a>
						<div class="dropdown-menu">
							<div class="image-selector-window">
								<div class="image-selector-section-wrapper">
									<div class="image-content">
										<label class="capture-button upside" style="">
											<img src="/img/dummy-image/screenshot-dummy-3ds-upper.jpeg" class="capture-image">
											<input type="radio" name="screenshot_type" value="upside" data-sound="SE_OLV_OK_SUB">
										</label>
										<label class="capture-button downside" style="">
											<img src="/img/dummy-image/screenshot-dummy-3ds-low.jpeg" class="capture-image">
											<input type="radio" name="screenshot_type" value="downside" data-sound="SE_OLV_OK_SUB">
										</label>
									</div>
									<div class="image-selector-section-options">
										<div class="image-selector-section-options-content">
											<label class="no-select-button">
												No Screenshot
												<input type="radio" name="screenshot_type" value="null" checked data-value="" data-src="/img/add-post-no-image.png" data-sound="SE_OLV_CANCEL">
											</label>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="textarea-with-menu active-text">
						<menu class="textarea-menu">
							<li>
								<label class="textarea-menu-text">
									<input type="radio" name="_post_type" value="body" checked data-sound="SE_OLV_TEXTBOX">
								</label>
							</li>
							<li>
								<label class="textarea-menu-memo">
									<input type="radio" name="_post_type" value="painting" data-sound="">
								</label>
							</li>
						</menu>
						<label class="spoiler-button checkbox-button">
							Spoilers
							<input type="checkbox" name="is_spoiler" value="1" data-sound="SE_OLV_CHECKBOX_CHECK">
						</label>
						<textarea name="body" class="textarea-text" value="" maxlength="200" cave_oninput="$(document.activeElement).trigger('input')" placeholder="Share your thoughts in a post to this community."></textarea>
						<div class="textarea-text-preview placeholder">Share your thoughts in a post to this community.</div>
						<div class="textarea-memo trigger" data-sound="">
							<div class="textarea-memo-preview"></div>
							<input type="hidden" name="painting" disabled>
						</div>
					</div>
					<div id="bottom-menu">
						<input type="button" class="cancel-button fixed-bottom-button" data-sound="SE_OLV_CANCEL" value="Cancel">
						<input type="submit" class="fixed-bottom-button fixed-bottom-button-post" disabled value="Post">
					</div>
				</div>
			</form>
{% endblock %}