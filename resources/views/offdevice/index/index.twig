								<li class="trigger" data-href="{{ route('title.community', [ title_id, id ]) }}">
									<div class="community-list-body">
										<span class="icon-container">
											<img class="icon" src="/img/icons/{{ community.icon }}">
										</span>
										<div class="body">
											<a class="title" href="{{ route('title.community', [ title_id, id ]) }}">{{ community.name }}</a>
										</div>
									</div>
								</li>
							{% endfor %}
					{% else %}
						<div class="no-content">
							<p>There are no communities in this category.</p>
						</div>
					{% endif %}
					</ul>
				</div>
{% endblock %}